@{
    ViewBag.Title = "Top 100";
}

<h2>Rankig dos 100 melhores jogadores</h2>
<h2 style="color:red">@ViewBag.InfoServico</h2>

<div>
    <table id="t01">
        <thead>
        <th>ID do jogador</th>
        <th>Balanço de pontos do jogador</th>
        <th>Data ultima atualização dos pontos</th>
        </thead>
        @foreach (var item in ViewBag.ListLeaderboard)
        {
            <tr>
                <td>
                    @item.PlayerId
                </td>
                <td>
                    @item.Balance
                </td>
                <td>
                    @item.LastUpdateDate
                </td>
            </tr>
        }

    </table>
</div>   
<style>
table#t01 {
    width: 100%;
    background-color: #f1f1c1;
}

table#t01 tr:nth-child(even) {
    background-color: #eee;
}

table#t01 tr:nth-child(odd) {
    background-color: #fff;
}

table#t01 th {
    color: white;
    background-color: gray;
}

table, th, td {
    border: 1px solid black;
}

table, th, td {
    border: 1px solid black;
    border-collapse: collapse;
}

table, th, td {
    border: 1px solid black;
    border-collapse: collapse;
}

th, td {
    padding: 15px;
}
</style> 